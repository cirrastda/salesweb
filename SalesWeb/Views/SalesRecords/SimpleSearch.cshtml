@model IEnumerable<SalesWeb.Models.SalesRecord>
<h2>@ViewData["Title"]</h2>
<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
                <label for="minDate" class="col-md-2 control-label">From:</label>
                <div class="col-lg-2">
                    <input type="date" name="start" class="form-control" value=@ViewData["start"] />
                </div>
            </div>
            <div class="form-group">
                <label for="maxDate" class="col-md-2 control-label">To:</label>
                <div class="col-lg-2">
                    <input type="date" name="end" class="form-control" value=@ViewData["end"] />
                </div>
            </div>
            <input type="submit" value="Filter" class="btn btn-primary" />
        </form>

    </div>

</nav>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Total Sales - @Model.Sum(obj => obj.Amount).ToString("F2")</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="info">
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Seller)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Seller.Department)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Amount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Seller.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Seller.Department.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
